{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:vue/essential",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "max-len": ["error", { "code": 150 }],
    "vue/max-len": ["error", { "code": 150 }],
    "import/no-unresolved": [0, { "caseSensitive": false }],
    "vue/multi-word-component-names": ["error"],
    "no-param-reassign": ["error", { "props": false }]
  }
}
